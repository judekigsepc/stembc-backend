{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@utils/*": [
        "utils/*"
      ],
      "@configs/*": [
        "configs/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@types/*": [
        "types/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}